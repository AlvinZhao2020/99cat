<h1>edit a cat</h1>

<form action="cats/:id" method="patch">
    <label> name:<input type="text" name='cat[name]' value='<%= @cat.name %>'></label>
    <br/>
    <label> color: <select name='cat[color]' >
                    <option  disabled selected>--select a color--</option>
                    <% Cat::CAT_COLORS.each do|color| %>
                        <option 
                            <%= @cat.color == color ? "selected" : "" %>
                            value="<%= color %>">
                            <%= color.upcase %>
                        </option>
                    <% end %>
                   </select>
    </label>
    <br/>
    <label>gender:
        <input type="radio" name='cat[sex]' value='M' <%=  @cat.sex == 'M' ?  'checked': ''  %>>M 
        <input type="radio" name='cat[sex]' value='F'<%=  @cat.sex == 'F' ?  'checked' :'' %>>F
    </label>
    <br/>
    <label>Birth_date
        <input type="date" name='cat[birth_date]' value = '<%= @cat.birth_date %>'>
    </label>
    <br/>
    <p>description:
    <textarea name='cat[description]'><%= @cat.description %></textarea>
    </p>
    <input type="submit" value ='update dog info'>
</form>